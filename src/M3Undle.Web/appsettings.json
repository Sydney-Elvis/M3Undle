{
  "ConnectionStrings": {
    "DefaultConnection": "DataSource=Data/m3undle.db;Cache=Shared"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{EventType,-12}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "IPTVGuideDog": {
    "Logging": {
      "LogDirectory": "Data/logs",
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCount": 31,
      "RollOnFileSizeLimit": true,
      "UseJsonFormat": false,
      "OutputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] [{EventType,-12}] {Message:lj}{NewLine}{Exception}"
    },
    "Refresh": {
      "IntervalHours": 4,
      "TimeoutMinutes": 5,
      "StartupDelaySeconds": 30
    },
    "Snapshot": {
      "RetentionCount": 3
    }
  }
}
